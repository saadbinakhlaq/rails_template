<%= form_for @profile, url: profile_path, method: method, html: { class: "w-full max-w-2xl mx-auto" } do |form| %>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label :first_name, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.text_field(
            :first_name,
            class: "appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" + "#{border_error(@profile.errors.messages[:first_name].present?)}",
                  
            placeholder: "Jane")
      %>
      <% if @profile.errors.messages[:first_name].present? %>
        <p class="text-red-500 text-xs italic">Please fill out this field.</p>
      <% end %>
    </div>
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label :last_name, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.text_field(
          :last_name,
          class: "appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" + "#{border_error(@profile.errors.messages[:last_name].present?)}",
          placeholder: "Doe") %>
      <% if @profile.errors.messages[:last_name].present? %>
        <p class="text-red-500 text-xs italic">Please fill out this field.</p>
      <% end %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <%= form.label :phone_number, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.text_field :phone_number, class: "appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" + "#{border_error(@profile.errors.messages[:phone_number].present?)}", placeholder: "+491765670000" %>
      <% if @profile.errors.messages[:phone_number].present? %>
        <p class="text-red-500 text-xs italic">Please fill out this field.</p>
      <% end %>          
    </div>      
  </div>
  <%= form.fields_for :address do |address_form| %>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <%= address_form.label :street, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= address_form.text_field :street, class: "appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" + "#{border_error(@profile.address.errors.messages[:street].present?)}", placeholder: "Berliner Str. 18" %>
      </div>
      <% if @profile.address.errors.messages[:street].present? %>
        <p class="text-red-500 text-xs italic">Please fill out this field.</p>
      <% end %>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
        <%= address_form.label :city, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= address_form.text_field :city, class: "appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" + "#{border_error(@profile.address.errors.messages[:city].present?)}", placeholder: "Berlin" %>
        <% if @profile.address.errors.messages[:city].present? %>
          <p class="text-red-500 text-xs italic">Please fill out this field.</p>
        <% end %>
      </div>
      <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
        <%= address_form.label :postal_code, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= address_form.text_field :postal_code, class: "appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" + "#{border_error(@profile.address.errors.messages[:postal_code].present?)}", placeholder: "10786" %>
        <% if @profile.address.errors.messages[:postal_code].present? %>
          <p class="text-red-500 text-xs italic">Please fill out this field.</p>
        <% end %>
      </div>
      <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
        <%= address_form.label :country, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= address_form.text_field :country, class: "appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" + "#{border_error(@profile.address.errors.messages[:country].present?)}", placeholder: "Germany" %>
        <% if @profile.address.errors.messages[:country].present? %>
          <p class="text-red-500 text-xs italic">Please fill out this field.</p>
        <% end %>
      </div>
    </div>
  <% end %>
  <div>
    <%= form.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>