<div class="w-2/3">
  <% posts.each do |post| %>
    <!-- post card -->
    <div class="flex bg-white shadow-lg rounded-lg mx-4 md:mx-auto max-w-md md:max-w-2xl mb-8">
      <div class="px-4 py-6 md:mx-auto md:max-w-2xl min-w-full h-96">
        <div class="flex border-b py-4 px-4">
            <%= link_to admin_post_path(post), class: "text-lg font-semibold text-gray-900 -mt-1 w-1/2 text-start" do %>
              <h2><%= post.title %></h2>
            <% end %>
            <div class="flex text-sm text-gray-700 w-1/2 text-end justify-end">
              <small class="mr-2"><%= distance_of_time_in_words(Time.current, post.created_at) %></small>
              <% if editable %>
                <%= link_to edit_admin_post_path(post) do %>
                  <svg class="h-4 w-4"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                  </svg>
                <% end %>
              <% end %>
            </div>
        </div>
        <p class="mt-3 text-gray-700 text-sm text-start py-4 px-4">
          <%= post.description.truncate_words(120) %>
        </p>
      </div>
    </div>
  <% end %>
  <div class="mx-auto mb-48">
    <%== pagy_nav(pagy) if pagy.pages > 1 %>
  </div>
</div>