<div class="hidden md:flex flex-col w-64">
    <div class="flex items-center justify-center h-16 border-gray-200">
        <% if @profile.nil? %>
            <%= link_to "Add Your Profile Details", new_profile_path, class: "text-red-400 font-bold" %>
        <% elsif !@profile.persisted? %>
        <% else %>
            <span class="text-green-500 font-bold uppercase">Hi ! <%= @profile.first_name %></span>
        <% end %>
    </div>
    <div class="">
        <nav class="flex-1 px-2 py-4">
            <%= link_to feed_path, class: "flex items-center px-4 py-2 mt-2 text-gray-800 hover:bg-gray-200" do %>
              <svg class="h-6 w-6 mr-2"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 0 1-2.25 2.25M16.5 7.5V18a2.25 2.25 0 0 0 2.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 0 0 2.25 2.25h13.5M6 7.5h3v3H6v-3Z"></path>
              </svg>
                <span>Feed</span>
            <% end %>
            <% if current_user.account.has_role?(:admin) %>
                <%= link_to admin_posts_path, class: "flex items-center px-4 py-2 mt-2 text-gray-800 hover:bg-gray-200" do %>
                <svg class="h-6 w-6 mr-2"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 0 1-2.25 2.25M16.5 7.5V18a2.25 2.25 0 0 0 2.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 0 0 2.25 2.25h13.5M6 7.5h3v3H6v-3Z"></path>
                </svg>
                  <span>Posts</span>
              <% end %>
            <% end %>
        </nav>
    </div>
</div>